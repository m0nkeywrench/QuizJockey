%h1 コース作成
= form_with model: @course, local: true do |f|

  - if @course.errors.any?
    = "#{@course.errors.count}件のエラーが発生しました"

  = f.label :name
  = f.text_field :name

  = f.label :description
  = f.text_area :description

  = f.label :private
  = f.check_box :private,{}, "true", "false"

  = f.submit
