= render "shared/header"

.main
  .main__content
    .mypage
      .mypage__left
        = render "shared/mypage_menu"

      .mypage__right
        .mypage__right--title
          パスワード変更
        .mypage__right--main
          .user-form.edit-user
            = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
              = render "devise/shared/error_messages", resource: resource

              .user-form__input
                .user-form__input--label
                  = f.label :email, "メールアドレス"
                .user-form__input--form
                  = f.email_field :email,autocomplete: "email"

              .user-form__input
                .user-form__input--label
                  = f.label :current_password, "現在のパスワード"
                .user-form__input--form
                  = f.password_field :current_password, autocomplete: "current-password"
                
                .user-form__input--label
                  = f.label :password, "新しいパスワード"
                  - if @minimum_password_length
                    = " (#{@minimum_password_length}文字以上の英数字)"
                .user-form__input--form
                  = f.password_field :password, autocomplete: "new-password"

                .user-form__input--label
                  = f.label :password_confirmation, "新しいパスワード(確認用)"
                .user-form__input--form
                  = f.password_field :password_confirmation, autocomplete: "new-password"

              .user-form__input
                = f.submit "変更", class: "link-button main-color put-center"

  .main__sidebar

= render "shared/footer"