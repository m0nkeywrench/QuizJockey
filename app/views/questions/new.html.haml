%h1 問題作成
%h3 コース情報
= @course.name
= @course.description
%h3 問題情報
- if @course.questions.present?
  - @course.questions.each do |q|
    = q.sentence
    = q.answer
    = "#{q.wrong1},#{q.wrong2},#{q.wrong3}"
    %br/

= form_with model: [@course, @question], local: true do |f|

  - if @question.errors.any?
    = "#{@question.errors.count}件のエラーが発生しました"

  = f.label :sentence
  = f.text_area :sentence

  = f.label :answer
  = f.text_field :answer

  = f.label :wrong1
  = f.text_field :wrong1

  = f.label :wrong2
  = f.text_field :wrong2

  = f.label :wrong3
  = f.text_field :wrong3

  = f.label :commentary
  = f.text_area :commentary

  = f.submit